{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@example/shared": [
        "./src/shared"
      ],
      "@example/data": [
        "./src/data"
      ],
      "@example/domain": [
        "./src/domain"
      ],
      "@example/features": [
        "./src/features"
      ],
      "@example/screens": [
        "./src/screens"
      ],
      "@example/widgets": [
        "./src/widgets"
      ]
    },
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./global.d.ts"]
}
